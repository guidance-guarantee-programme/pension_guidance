<% content_for(:page_title, t('service.title', page_title: t('.title'))) %>
<% if @summary.current_step_number == 1 %>
<% content_for(:page_name, 'explore-your-options--summary') %>
<% content_for(:step_name, 'Summary') %>
<% content_for(:tool_step, '4') %>
<% else %>
<% content_for(:page_name, "explore-your-options--summary--#{@summary.current_step}") %>
<% content_for(:step_name, '') %>
<% content_for(:tool_step, '') %>
<% end %>
<% content_for(:tool_name, 'Explore Your Options') %>

<div class="l-column-two-thirds">
  <div class="build-your-own-progress">
    <%= t('.pagination', current_page: @summary.current_step_number, total_pages: @summary.all_selected_steps.count) %>
  </div>

  <% if @summary.first_step? %>
    <div class="application-notice info-notice">
      <p><%= t('.first_step_introduction.html') %></p>
    </div>
  <% end %>

  <%= @guide.content %>

  <% if @summary.last_step? %>
    <% if @summary.pilot? %>
      <%= link_to t('.next_button'), explore_your_options_your_experience_path(id: @summary.id), class: 'button button-next' %>
    <% end %>
  <% else %>
    <%= link_to t('.next_button'), explore_your_options_summary_path(id: @summary.id, step: @summary.next_step), class: 'button button--primary button-next' %>

    <p>
      <%= link_to t('.book_a_free_appointment_link'), money_helper_url('pensions-and-retirement/pension-wise/book-a-free-pension-wise-appointment/how-to-book-a-phone-appointment', locale: params[:locale]), class: 'summary', target: '_parent' %>
    </p>
  <% end %>
</div>

<%= render 'sidebar' %>
