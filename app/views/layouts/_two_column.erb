<%= render layout: 'layouts/base' do %>
  <div class="l-masthead">
    <div class="l-banner-container">
      <%= render 'components/logo_link' %>
      <%= render 'components/page_nav' %>
    </div>
  </div>

  <div class="l-page-container">
    <%= render 'components/breadcrumbs' %>

    <div class="l-grid-row">
      <div class="l-column-two-thirds">
        <main role="main" id="content" tabindex="-1">
          <%= yield %>
        </main>
      </div>
      <div class="l-column-third l-column-third--sidebar">
        <% if book_an_appointment_link? %>
          <a href="/appointments" class="book-appointment">Book a free appointment</a>
        <% end %>

        <% if content_for?(:sidebar) %>
          <div class="sidebar-hr"></div>
          <%= yield :sidebar %>
        <% end %>
      </div>
    </div>

  </div>
<% end %>
