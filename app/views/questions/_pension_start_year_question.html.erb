<form action="<%= "/#{locale}/questions" %>" accept-charset="UTF-8" method="post">
  <input name="question_id" type="hidden" value="<%= id %>">

  <div class="form-group js-question">
    <div id="question" tabindex="-1">
      <%= header %>
    </div>

    <span class="error-message js-error-message"></span>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_1995_or_before" value="1995_or_before">
      <label for="response_1995_or_before"><%= t('.1995_or_before') %></label>
    </div>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_1996_to_2000" value="1996_to_2000">
      <label for="response_1996_to_2000"><%= t('.1996_to_2000') %></label>
    </div>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_2001_or_later" value="2001_or_later">
      <label for="response_2001_or_later"><%= t('.2001_or_later') %></label>
    </div>

    <div class="multiple-choice">
      <input type="radio" name="response" id="response_dont_know" value="dont_know">
      <label for="response_dont_know"><%= t('.dont_know') %></label>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="medium button"><%= t('.next_step') %></button>
  </div>
</form>
